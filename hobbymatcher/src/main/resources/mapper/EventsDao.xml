<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hobbymatcher.dao.EventsDao">
    <select id="queryEvents" resultType="com.hobbymatcher.entity.Events">
        SELECT *
        FROM events
        ORDER BY events_id
            DESC
    </select>

    <select id="findEventsById" parameterType="map" resultType="Events">
        select *
        from events
        where events_id = #{events_id}

    </select>

    <insert id="addEvents" useGeneratedKeys="true" keyProperty="eventsId">
        insert into events (events_title, events_time, Location, Description, Fee, Holder, events_image, hobby_id)
        values (#{eventsTitle}, #{eventsTime}, #{location}, #{description}, #{fee}, #{holder}, #{eventsImage},
                #{hobbyId})
    </insert>

    <insert id="joinEvents" useGeneratedKeys="true">
        insert into join_events(user_id, events_id)
        values (#{id}, #{eventsId})
    </insert>

    <update id="updateEvents" parameterType="com.hobbymatcher.entity.Events">
        update events
        <set>
            <if test="eventsTitle != null">events_title=#{eventsTitle},</if>
            <if test="eventsTime != null">eventsTime=#{eventsTime},</if>
            <if test="Location != null">location=#{location},</if>
            <if test="Description != null">Description=#{description},</if>
            <if test="Fee != null">Fee=#{fee},</if>
            <if test="Holder != null">Holder=#{holder},</if>
            <if test="hobby_id != null">hobby_id=#{hobbyId},</if>
            <if test="status != null">events_image=#{eventsImage},</if>
        </set>
        where events_id=#{events_id}
    </update>

    <delete id="deleteEvents">
        DELETE
        FROM events
        WHERE events_id = #{id}
    </delete>
</mapper>
